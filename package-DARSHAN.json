{
    "name": "vyapaar-ai",
    "version": "1.0.0",
    "private": true,
    "description": "AI-powered business management solution for Indian small businesses",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "start": "cd backend && npm start",
        "start:backend": "cd backend && npm start",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
        "setup": "node setup-backend.js",
        "db:setup": "cd backend && npm run db:setup",
        "db:sample": "cd backend && npm run db:sample",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:backend": "cd backend && npm run lint",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm run test",
        "test:backend": "cd backend && npm run test",
        "clean": "rimraf frontend/node_modules backend/node_modules node_modules frontend/dist backend/dist"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "rimraf": "^5.0.5"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/vyapaar-ai.git"
    },
    "keywords": [
        "business-management",
        "ai",
        "voice",
        "whatsapp",
        "inventory",
        "invoicing",
        "indian-businesses"
    ],
    "author": "",
    "license": "MIT"
}